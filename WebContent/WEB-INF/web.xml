<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/Javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>BookManage</display-name>
  <servlet>
    <description></description>
    <display-name>AdminOrderController</display-name>
    <servlet-name>AdminOrderController</servlet-name>
    <servlet-class>main.java.jp.co.bookmanage.controller.AdminOrderController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminOrderController</servlet-name>
    <url-pattern>*.adorder</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>OrderController</display-name>
    <servlet-name>OrderController</servlet-name>
    <servlet-class>main.java.jp.co.bookmanage.controller.OrderController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrderController</servlet-name>
    <url-pattern>*.order</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>MemberController</display-name>
    <servlet-name>MemberController</servlet-name>
    <servlet-class>main.java.jp.co.bookmanage.controller.MemberController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberController</servlet-name>
    <url-pattern>*.member</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>CartController</display-name>
    <servlet-name>CartController</servlet-name>
    <servlet-class>main.java.jp.co.bookmanage.controller.CartController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CartController</servlet-name>
    <url-pattern>*.cart</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>BookController</display-name>
    <servlet-name>BookController</servlet-name>
    <servlet-class>main.java.jp.co.bookmanage.controller.BookController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookController</servlet-name>
    <url-pattern>*.book</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>AdminBookController</display-name>
    <servlet-name>AdminBookController</servlet-name>
    <servlet-class>main.java.jp.co.bookmanage.controller.AdminBookController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminBookController</servlet-name>
    <url-pattern>*.adbook</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <description></description>
    <display-name>AdminMemberController</display-name>
    <servlet-name>AdminMemberController</servlet-name>
    <servlet-class>main.java.jp.co.bookmanage.controller.AdminMemberController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminMemberController</servlet-name>
    <url-pattern>*.admember</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
<servlet>
   <servlet-name>ErrorController</servlet-name>
   <servlet-class>main.java.jp.co.bookmanage.controller.ErrorController</servlet-class>
</servlet>
<servlet-mapping>
   <servlet-name>ErrorController</servlet-name>
   <url-pattern>/ErrorController</url-pattern>
</servlet-mapping>

<error-page>
   <exception-type>java.lang.Throwable</exception-type >
   <location>/ErrorController</location>
</error-page>
 
</web-app>